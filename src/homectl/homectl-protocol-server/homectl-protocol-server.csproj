<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>homectl</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Protos\APIServer\Devices.proto" />
    <None Remove="Protos\Controllers.proto" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Google.Protobuf" Version="3.11.4" />
    <PackageReference Include="Grpc.Core" Version="2.28.0-pre3" />
    <PackageReference Include="Grpc.Tools" Version="2.28.0-pre3">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <Protobuf Include="Protos\APIServer\Devices.proto" GrpcServices="Server,Client" />
    <Protobuf Include="Protos\Host\Controllers.proto" GrpcServices="Server,Client" />
  </ItemGroup>

</Project>
